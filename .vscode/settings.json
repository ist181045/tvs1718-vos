{
  "latex-workshop.latex.outputDir": "../../../target/tex",
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex -> copy report",
      "tools": [
        "pdflatex",
        "copy report"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-shell-escape",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-output-directory=../../../target/tex",
        "%DOC%"
      ]
    },
    {
      "name": "copy report",
      "command": "cp",
      "args": [
        "%DIR%/../../../target/tex/%DOCFILE%.pdf",
        "../../../report.pdf"
      ]
    }
  ],
}